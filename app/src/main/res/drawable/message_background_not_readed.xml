<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="right"
        android:width="18dp"
        android:height="18dp"
        android:left="-1dp"
        android:right="-1dp">
        <rotate
            android:fromDegrees="37"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#FF597897" />
                <padding android:top="-8dp"/>
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="2dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FF597897" />
            <corners android:radius="7dp"/>
            <padding android:left="16dp"
                android:top="14dp"
                android:right="16dp"
                android:bottom="9dp" />
        </shape>
    </item>

</layer-list>