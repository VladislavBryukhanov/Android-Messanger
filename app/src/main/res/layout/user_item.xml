<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/common_google_signin_btn_text_dark_default"
    android:orientation="horizontal">

    <!--    app:civ_border_color="#507D97"
    app:civ_border_width="3dp"-->

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/msgCounter"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/message_counter"
            android:gravity="center_vertical|center"
            android:minWidth="26dp"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center_vertical"

                android:minHeight="50dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLastMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="right"
                android:minHeight="50dp"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvLastMsg"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:minHeight="50dp" />

        <!--<TextView-->
        <!--android:id="@+id/tvNickname"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="22dp"-->

        <!--android:gravity="center_vertical"-->
        <!--android:minHeight="50dp" />-->

    </LinearLayout>

</LinearLayout>